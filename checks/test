#!/bin/bash
echo ==========================================================================================#
echo BEGIN TEST
echo DELETE dummy_error
echo ==========================================================================================#
rm -f /tmp/dummy_error 
countdown=4
while [ $countdown -gt 0 ] ; do 
 echo ==========================================================================================#
 ./run warn_alert.flux oclean 
 sleep 30
 countdown=$(( $countdown - 1 ))
done
echo ==========================================================================================#
echo TOUCH dummy_error
touch /tmp/dummy_error 
echo ==========================================================================================#
countdown=14
while [ $countdown -gt 0 ] ; do 
 echo OK:
 echo ==========================================================================================#
 ./run warn_alert.flux oclean
 echo WARN:
 echo ==========================================================================================#
 ./run warn_alert.flux wclean
 echo IN WARN:
 echo ==========================================================================================#
 ./run warn_alert.flux iwclean
 echo ALERTS
 echo ==========================================================================================#
  ./run warn_alert.flux alerts
 echo NOTIFY
 echo ==========================================================================================#
  ./run warn_alert.flux notify
 echo ==========================================================================================#
 echo ==========================================================================================#
 echo 
 echo 
 sleep 30
 countdown=$(( $countdown - 1 ))
 echo
done

